{{! Check if a page title exist and render it}}
{{#if _articleReveal.displayTitle}}
  <div class="article-title">
    <div role="heading" tabindex="0" class="article-title-inner h2"  aria-level="2">
      {{{_articleReveal.displayTitle}}}
    </div>
  </div>
{{/if}}

{{! Check if page body exists and render it}}
{{#if _articleReveal.bodyOpen}}
  <div class="article-body">
    <div class="article-body-inner">
      {{{a11y_text _articleReveal.bodyOpen}}}
    </div>
  </div>
{{/if}}

{{! Check if page body exists and render it}}
{{#if _articleReveal.instructionOpen}}
  <div class="article-instruction">
    <div class="article-instruction-inner">
      {{{a11y_text _articleReveal.instructionOpen}}}
    </div>
  </div>
{{/if}}

<div class="article-reveal-inner {{_articleReveal._classes}}" style="min-height:{{_articleReveal._minHeight}}px; {{#if _articleReveal._backgroundImage}} background: url('{{_articleReveal._backgroundImage}}') center top no-repeat; {{/if}}" aria-label="{{_articleReveal._ariaRegions.articleReveal}}">

  <button class="button article-reveal-open-button" role="button" aria-label="{{_articleReveal._ariaLabels.openArticle}}">{{_articleReveal.buttonOpen}}</button>
  <button class="button article-reveal-close-button" role="button" aria-label="{{_articleReveal._ariaLabels.closeArticle}}">{{_articleReveal.buttonClose}}</button>

</div>