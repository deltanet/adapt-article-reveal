{{! make the _globals object in course.json available to this template}}
{{import_globals}}
<div class="article-inner block-container">
    <div class="article-header">
        {{#if _articleReveal.displayTitle}}
        <div class="article-title">
            {{#unless _disableAccessibilityState}}
                <div class="js-heading"></div>
            {{/unless}}
            <div class="article-title-inner" {{#unless _disableAccessibilityState}}aria-hidden="true"{{/unless}}>
                {{{compile _articleReveal.displayTitle}}}
            </div>
        </div>
        {{/if}}

        {{#if _articleReveal.bodyOpen}}
        <div class="article-body">
            <div class="article-body-inner">
                {{{compile _articleReveal.bodyOpen}}}
            </div>
        </div>
        {{/if}}

        {{#if _articleReveal.instructionOpen}}
        <div class="article-instruction">
            <div class="article-instruction-inner">
                {{{compile _articleReveal.instructionOpen}}}
            </div>
        </div>
        {{/if}}
    </div>
</div>
<div class="article-reveal-inner {{_articleReveal._classes}}" style="min-height:{{_articleReveal._minHeight}}px; {{#if _articleReveal._backgroundImage}} background: url('{{_articleReveal._backgroundImage}}') center top no-repeat; {{/if}}" aria-label="{{_articleReveal._ariaRegions.articleReveal}}">
    <button class="button article-reveal-open-button" aria-label="{{_articleReveal._ariaLabels.openArticle}}">{{_articleReveal.buttonOpen}}</button>
    <button class="button article-reveal-close-button" aria-label="{{_articleReveal._ariaLabels.closeArticle}}">{{_articleReveal.buttonClose}}</button>
</div>
